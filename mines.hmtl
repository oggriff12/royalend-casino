<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>RoyalEnd Mines</title>
  <link rel="stylesheet" href="mines.css">
</head>
<body>
  <div class="wallet">
    Balance: $<span id="balance">1.00</span>
    <button id="claimBonus">Claim $1 Bonus</button>
  </div>
  <div class="mines-game">
    <div class="stats-panel">
      <p>Wins: <span id="winCount">0</span></p>
      <p>Losses: <span id="lossCount">0</span></p>
      <p>Profit: $<span id="profit">0.00</span></p>
    </div>
    <div class="controls">
      <label>Grid Size:
        <select id="gridSize">
          <option value="5">5x5</option>
          <option value="6">6x6</option>
          <option value="7">7x7</option>
        </select>
      </label>
      <label>Bombs:
        <input type="number" id="bombCount" min="1" max="20" value="3" />
      </label>
      <label>Bet: $
        <input type="number" id="betAmount" step="0.1" min="0.1" value="0.1" />
      </label>
      <button id="startGame">Start Game</button>
      <button id="cashOut" disabled>Cash Out</button>
    </div>
    <div id="gameBoard" class="game-board"></div>
  </div>
  <script src="mines.js"></script>
</body>
</html>
